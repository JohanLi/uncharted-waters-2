{
  "name": "uncharter-waters-2",
  "version": "1.0.0",
  "description": "Remaking and reworking Uncharted Waters: New Horizons (大航海時代II) using web technologies",
  "scripts": {
    "start": "webpack serve --mode development",
    "lint": "eslint src/**/*.{js,jsx}",
    "test": "jest",
    "setup": "ansible-playbook -i ansible/hosts ansible/setup.yml",
    "build": "rm -rf dist && webpack --profile -p --mode production",
    "deploy": "rsync -a --delete dist/ root@johanli.com:/var/www/unchartedwaters2.com"
  },
  "author": "Johan Li",
  "license": "MIT",
  "babel": {
    "presets": [
      "@babel/preset-react",
      "@babel/preset-typescript",
      [
        "@babel/preset-env",
        {
          "targets": "defaults"
        }
      ]
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties"
    ],
    "compact": false
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "react-hooks"
    ],
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "jest": {
    "preset": "ts-jest",
    "moduleNameMapper": {
      "\\.(png|bin)$": "identity-obj-proxy"
    }
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.4.0",
    "classnames": "^2.2.6",
    "mobx": "^6.0.1",
    "mobx-react": "^7.0.0",
    "pixi.js": "^5.3.3",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-redux": "^7.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.12.1",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-react": "^7.12.1",
    "@babel/preset-typescript": "^7.12.1",
    "@types/jest": "^26.0.14",
    "@types/react": "^16.9.52",
    "@types/react-dom": "^16.9.8",
    "@types/react-redux": "^7.1.9",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "babel-loader": "^8.1.0",
    "compression-webpack-plugin": "^6.0.3",
    "css-loader": "^5.0.0",
    "eslint": "^7.11.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.21.4",
    "file-loader": "^6.1.1",
    "html-webpack-plugin": "^4.5.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.5.3",
    "mini-css-extract-plugin": "^1.0.0",
    "style-loader": "^2.0.0",
    "ts-jest": "^26.4.1",
    "typescript": "^4.0.3",
    "webpack": "^5.1.3",
    "webpack-cli": "^4.0.0",
    "webpack-dev-server": "^3.11.0",
    "workbox-webpack-plugin": "^5.1.4"
  }
}
