{
  "name": "uncharter-waters-2",
  "version": "1.0.0",
  "description": "Remaking and reworking Uncharted Waters: New Horizons (大航海時代II) using web technologies",
  "scripts": {
    "start": "webpack serve --mode development",
    "lint": "eslint src/**/*.{js,jsx}",
    "test": "jest",
    "setup": "ansible-playbook -i ansible/hosts ansible/setup.yml",
    "build": "rm -rf dist && webpack --profile -p --mode production",
    "deploy": "rsync -a --delete dist/ root@johanli.com:/var/www/unchartedwaters2.com"
  },
  "author": "Johan Li",
  "license": "MIT",
  "babel": {
    "presets": [
      "@babel/preset-react",
      "@babel/preset-typescript",
      [
        "@babel/preset-env",
        {
          "targets": "defaults"
        }
      ]
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties"
    ],
    "compact": false
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "react-hooks"
    ],
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "jest": {
    "preset": "ts-jest",
    "moduleNameMapper": {
      "\\.(png|bin)$": "identity-obj-proxy"
    },
    "testEnvironment": "jsdom"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.7.1",
    "classnames": "^2.3.1",
    "mobx": "^6.3.10",
    "mobx-react": "^7.2.1",
    "pixi.js": "^6.2.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.6"
  },
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.16.7",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@types/jest": "^27.4.0",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@types/react-redux": "^7.1.21",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "babel-loader": "^8.2.3",
    "compression-webpack-plugin": "^9.2.0",
    "css-loader": "^6.5.1",
    "eslint": "^8.6.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.28.0",
    "html-webpack-plugin": "^5.5.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.4.5",
    "mini-css-extract-plugin": "^2.4.5",
    "style-loader": "^3.3.1",
    "ts-jest": "^27.1.2",
    "typescript": "^4.5.4",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.7.2",
    "workbox-webpack-plugin": "^6.4.2"
  }
}
