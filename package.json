{
  "name": "uncharter-waters-2",
  "version": "1.0.0",
  "description": "Remaking and reworking Uncharted Waters: New Horizons (大航海時代II) using web technologies",
  "scripts": {
    "start": "webpack-dev-server --mode development --open",
    "lint": "eslint src/**/*.{js,jsx}",
    "test": "jest --config=test/jest.config.js",
    "setup": "ansible-playbook -i ansible/hosts ansible/setup.yml",
    "build": "rm -rf dist && webpack --profile -p --mode production",
    "deploy": "rsync -a --delete dist/ root@johanli.com:/var/www/unchartedwaters2.com"
  },
  "author": "Johan Li",
  "license": "MIT",
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "browsers": [
              "last 2 versions"
            ]
          }
        }
      ],
      "@babel/preset-react"
    ]
  },
  "eslintConfig": {
    "extends": "airbnb",
    "env": {
      "browser": true,
      "jest": true
    },
    "rules": {
      "no-use-before-define": 0
    }
  },
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "classnames": "^2.2.6",
    "mobx": "^5.0.3",
    "mobx-react": "^5.2.3",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "whatwg-fetch": "^2.0.4"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.55",
    "@babel/preset-env": "^7.0.0-beta.55",
    "@babel/preset-react": "^7.0.0-beta.55",
    "babel-core": "^7.0.0-bridge.0",
    "babel-loader": "^8.0.0-beta.4",
    "css-loader": "^1.0.0",
    "eslint": "^5.2.0",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.10.0",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.4.2",
    "mini-css-extract-plugin": "^0.4.1",
    "style-loader": "^0.21.0",
    "webpack": "^4.16.4",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.5",
    "workbox-webpack-plugin": "^3.4.1"
  }
}
